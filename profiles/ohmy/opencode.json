{
  "$schema": "https://opencode.ai/config.json",
  "model": "openai/gpt-5.3-codex",
  "keybinds": {
    "input_submit": "shift+return",
    "input_newline": "return,ctrl+return,alt+return,ctrl+j"
  },
  "provider": {
    "google": {
      "name": "Google"
    }
  },
  "mcp": {
    "brave": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@brave/brave-search-mcp-server"
      ],
      "environment": {
        "BRAVE_API_KEY": "{env:BRAVE_API_KEY}"
      },
      "enabled": true
    }
  },
  "tools": {
    "brave_*": false
  },
  "permission": {
    "skill": {
      "*": "allow"
    },
    "task": {
      "*": "allow"
    },
    "bash": {
      "*": "ask",
      "agent-browser *": "allow"
    }
  },
  "plugin": [
    "opencode-antigravity-auth@latest",
    "oh-my-opencode@latest",
    "./.opencode/plugins/ask-user-question.js"
  ],
  "agent": {
    "exp-orchestrator": {
      "mode": "subagent",
      "description": "Experiment workflow orchestration",
      "model": "openai/gpt-5.3-codex"
    },
    "exp-runner": {
      "mode": "subagent",
      "description": "Experiment implementation and execution",
      "model": "openai/gpt-5.3-codex"
    },
    "exp-reporter": {
      "mode": "subagent",
      "description": "Experiment report generation",
      "model": "github-copilot/gpt-5-mini"
    },
    "exp-indexer": {
      "mode": "subagent",
      "description": "Experiment master index updates",
      "model": "github-copilot/gpt-5-mini"
    },
    "kaggle-research": {
      "mode": "subagent",
      "description": "Kaggle research and experiment planning",
      "model": "openai/gpt-5.1-codex-mini"
    },
    "game-dev-assistant": {
      "mode": "subagent",
      "description": "Game development workflow assistant",
      "model": "openai/gpt-5.1-codex-mini"
    }
  }
}
